@model List<AutoParts.Web.Models.PartModel>

@{
    ViewData["Title"] = "Part list";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="my-auto">Part list</h4>
        <a asp-controller="Part" asp-action="Create" class="btn btn-primary my-auto">
            <i class="fas fa-plus"></i> Add new part
        </a>
    </div>
    <div class="card-body">
        <table class="table table-bordered align-middle text-center">
          <thead class="table-light">
            <tr>
              <th scope="col">Type</th>
              <th scope="col">Name</th>
              <th scope="col">Unit Price</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var part in Model)
            {
                <tr>
                    @await Html.PartialAsync("_UpdatePartialForm", part)
                </tr>
            }
          </tbody>
        </table>
    </div>
</div>
