@model IEnumerable<AutoParts.Web.Data.Entities.Customer>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Lista klientów</h4>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Dodaj nowego
        </a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Imię i nazwisko</th>
                    <th>Telefon</th>
                    <th>E-mail</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @customer.Name
                            @(string.IsNullOrEmpty(customer.SecondName) ? "" : " " + customer.SecondName)
                            @customer.LastName
                        </td>
                        <td>@customer.PhoneNumber</td>
                        <td>@customer.Email</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@customer.Id"
                               class="btn btn-sm btn-info" title="Szczegóły">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-controller="Vehicles" asp-action="Create"
                               asp-route-customerId="@customer.Id"
                               class="btn btn-sm btn-primary" title="Dodaj pojazd">
                                <i class="fas fa-car"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
