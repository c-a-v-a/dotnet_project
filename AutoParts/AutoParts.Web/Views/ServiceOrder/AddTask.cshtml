@model AutoParts.Web.Models.AddServiceTaskViewModel

@{
    ViewData["Title"] = "Dodaj czynność serwisową";
}

<h2>Dodaj czynność serwisową</h2>

<form asp-action="AddTask" method="post">
    <input type="hidden" asp-for="ServiceOrderId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LaborCost" class="form-label"></label>
        <input asp-for="LaborCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="LaborCost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
