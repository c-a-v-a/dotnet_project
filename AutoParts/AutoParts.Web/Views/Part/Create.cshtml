@model AutoParts.Web.Models.PartModel;

@{
    ViewData["Title"] = "Add part";
}

<dev class="card">
  <div class="card-header d-flex justify-content-start align-items-center">
    <h4>Add part</h4>
  </div>
    <form asp-action="Create" method="post" class="needs-validation card-body d-flex flex-column justify-content-start align-items-center" novalidate>
        <div class="mb-3 form-floating w-50">
            <input asp-for="Type" class="form-control" placeholder="Type"/>
            <label asp-for="Type" class="form-label">Type</label>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating w-50">
            <input asp-for="Name" class="form-control" placeholder="Name"/>
            <label asp-for="Name" class="form-label">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating w-50">
            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" placeholder="UnitPrice"/>
            <label asp-for="UnitPrice" class="form-label">UnitPrice</label>
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <button class="btn btn-primary align-self-center w-25" type="submit">Add part</button>
    </form>
<dev>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
