@model AutoParts.Web.Models.AddUsedPartViewModel

@{
    ViewData["Title"] = "Dodaj część do zadania";
}

<h2>Dodaj część do czynności serwisowej</h2>

<form asp-action="AddUsedPart" method="post">
    <input type="hidden" asp-for="ServiceTaskId" />

    <div class="mb-3">
        <label asp-for="PartId" class="form-label"></label>
        <select asp-for="PartId" class="form-select" asp-items="Model.AvailableParts">
            <option value="">-- Wybierz część --</option>
        </select>
        <span asp-validation-for="PartId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
