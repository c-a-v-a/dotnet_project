@model AutoParts.Web.Models.PartModel

<form asp-action="Update" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <td>
        <div class="form-floating">
            <input asp-for="Type" class="form-control" placeholder="Type" value="@Model.Type"/>
            <label asp-for="Type" class="form-label">Type</label>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </td>
    <td>
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Name" value="@Model.Name"/>
            <label asp-for="Name" class="form-label">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </td>
    <td>
        <div class="form-floating">
            <input asp-for="UnitPrice" class="form-control" placeholder="UnitPrice" type="number" step="0.01" value="@Model.UnitPrice"/>
            <label asp-for="UnitPrice" class="form-label">UnitPrice</label>
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
    </td>
    <td>
        <button class="btn btn-primary btn-lg" type="submit">Update</button>
    </td>
</form>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="needs-validation" onsubmit="return confirm('Are you sure you want to delete this part?');" novalidate>
    <td>
        <button class="btn btn-danger btn-lg" type="submit">Delete</button>
    </td>
</form>
